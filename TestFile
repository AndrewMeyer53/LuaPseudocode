--#2 
--Ask the user for 2 numbers, add them together, print the result
--Think about: what happens if the user enters a letter?

print("Enter the first number") 
num1 = tonumber(io.read())

while num1 == nil do
  print("Thats not a number, try again !")
  num1 = tonumber(io.read())
end 

print("Enter the second number ") 
num2 = tonumber(io.read()) 

while num2 == nil do 
  print("Thats not a number, try again!")
  num2 = tonumber(io.read())
end

total = num1 + num2
print("The total is " .. total) 

--#3 
--Get an unknown amount of numbers from the user, add them together, print out the result.

continueVar = "Y" do
total = 0 
newNumber = 0

while continueVar == "Y" do
  print("Enter a number")
  newNumber = tonumber(io.read())


while newNumber == nil do 
 print("Not a number, try again!")
 newNumber = tonumber(io.read())
end 

total = total + newNumber
print("Do you want to enter another number? y or n")
continueVar = io.read()

end

print("The total is" .. total )

--#4 
--Have the user define a maximum number, print out a random number between 0 and their number 
-- Have the user play again or quit

continueVar = "y"
math.randomseed(os.time())
math.random() math.random() math.random()

while continueVar == "y" do
  print("Enter a maximum value")
  maxValue = tonumber(io.read())
  while maxValue == nil do
    print("Not a numnber")
    maxValue= tonumber(io.read())
  end
  randomValue = math.random(0, maxValue)
  print("Your random number is" .. randomValue)
  print("Press y to do that again")
  continueVar = io.read()
  end

